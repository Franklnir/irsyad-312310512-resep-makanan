<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FFE3A1">

    <androidx.cardview.widget.CardView
        android:id="@+id/recipe_card1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="389dp"
            android:layout_height="769dp"
            android:background="#FFEFD6"
            android:padding="16dp">

            <ImageView
                android:id="@+id/img_recipe1"
                android:layout_width="401dp"
                android:layout_height="187dp"
                android:scaleType="centerCrop"
                android:src="@drawable/bakpao"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_ingredients1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Bahan-Bahan:"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.057"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/img_recipe1" />

            <TextView
                android:id="@+id/tv_ingredients_list1"
                android:layout_width="340dp"
                android:layout_height="166dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:text="- 500 gram tepung terigu\n\n- 1 sdt ragi instan\n\n- 50 gram gula pasir\n\n- 1/2 sdt garam\n\n- 250 ml air hangat\n\n- 50 gram minyak goreng\n\n- 150 gram daging abon"
                android:textColor="#000000"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.333"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_ingredients1" />

            <TextView
                android:id="@+id/tv_steps_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="36dp"
                android:text="Langkah-Langkah Membuat:"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_ingredients_list1" />

            <TextView
                android:id="@+id/tv_steps_list"
                android:layout_width="332dp"
                android:layout_height="179dp"
                android:layout_marginTop="4dp"
                android:text="1. Campurkan tepung terigu, ragi instan, gula, dan garam dalam sebuah wadah.\n\n2. Tambahkan air hangat sedikit-sedikit, uleni hingga adonan kalis dan elastis.\n\n3. Diamkan adonan selama 1 jam hingga mengembang.\n\n4. Ambil sedikit adonan, pipihkan, dan beri daging abon di tengahnya, rapatkan dan bulatkan.\n\n5. Kukus bakpao selama 15-20 menit hingga matang.\n\n6. Sajikan bakpao isi abon hangat-hangat."
                android:textColor="#000000"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_steps_title"
                app:layout_constraintVertical_bias="0.09" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
